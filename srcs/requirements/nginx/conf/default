server
{
    listen 443 ssl;
    server_name localhost ${LOGIN}.42.fr;

	root /var/www/html;

    ssl_certificate ${SSL_CERTIFICATE};
    ssl_certificate_key ${SSL_CERTIFICATE_KEY};
    ssl_protocols TLSv1.3;

    index index.nginx-debian.html;

    # Location block
    location /
    {
        try_files $uri $uri/ =404;
    }
}
